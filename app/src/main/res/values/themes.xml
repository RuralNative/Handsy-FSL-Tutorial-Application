<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="HandsyTheme" parent="Theme.MaterialComponents.DayNight">
        <item name="android:statusBarColor">
            @android:color/transparent
        </item>
        <item name="android:windowBackground">@color/material_dynamic_background</item>
        <item name="android:navigationBarColor">
            @android:color/transparent
        </item>
    </style>
    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/primary_light</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/icon</item>
        <item name="postSplashScreenTheme">@style/HandsyTheme</item>
    </style>
</resources>